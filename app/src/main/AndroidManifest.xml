<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nurzainpradana.koperasimasjid">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.DetailProductAct"/>
        <activity android:name=".activity.UpdatePasswordAct" />

        <activity android:name=".activity.MainActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activity.SuccessRegisterAct" />

        <activity android:name=".activity.RegisterTwoAct" />

        <activity android:name=".activity.VerificationAct" />

        <activity android:name=".activity.RegisterOneAct" />

        <activity android:name=".activity.SignInAct" />

        <activity android:name=".fragment.HomeFragment"/>

        <activity android:name=".fragment.TransactionFragment" />

        <activity android:name=".fragment.CartFragment" />

        <activity android:name=".fragment.FavoriteFragment" />

        <activity android:name=".fragment.ProfileFragment" />

        <activity android:name=".activity.SplashScreenAct">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>