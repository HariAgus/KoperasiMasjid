<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    tools:context=".VerificationAct">


    <ImageView
        android:id="@+id/logo_koperasi"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:src="@drawable/img_logo_koperasi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="27dp"
        />
    <LinearLayout
        android:id="@+id/judul_koperasi2"
        app:layout_constraintStart_toEndOf="@id/logo_koperasi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/judul_koperasi"
            android:text="@string/title_judul_koperasi"
            style="@style/subheader_small"
            />

        <TextView
            android:id="@+id/nama_koperasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_nama_koperasi"
            android:textSize="20sp"
            android:fontFamily="@font/montmedium"
            android:textColor="@color/warna1"
            />

        <TextView
            android:id="@+id/alamat_koperasi"
            android:text="@string/title_alamat_koperasi"
            style="@style/subheader_small"/>
    </LinearLayout>



    <TextView
        android:id="@+id/judul_layout"
        android:text="@string/title_verifikasi"
        style="@style/judul_layout"
        app:layout_constraintTop_toBottomOf="@+id/judul_koperasi2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/background_masjid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_masjid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-20dp"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/muslimhandshake"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_muamalah"
        app:layout_constraintTop_toTopOf="@id/background_masjid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="170dp"
        android:alpha="0.6"/>

    <LinearLayout
        android:background="@drawable/bg_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintTop_toBottomOf="@id/judul_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:text="@string/verifikasi_masukan_kode"
            style="@style/teksbody1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="4dp">
            <EditText style="@style/inputpin"/>
            <EditText style="@style/inputpin"/>
            <EditText style="@style/inputpin"/>
            <EditText style="@style/inputpin"/>
            <EditText style="@style/inputpin"/>
            <EditText style="@style/inputpin"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_verifikasi_lanjut"
            android:layout_marginTop="18sp"
            style="@style/btn_primary_gold"
            android:text="@string/action_lanjut"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="@string/verifikasi_belum_mendapat_SMS"
            style="@style/teksbody1"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:text="@string/action_kirim_ulang"
            style="@style/teksbody1"
            android:fontFamily="@font/montbold"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>