<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessRegisterAct">

    <ImageView
        android:id="@+id/background_masjid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_masjid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:alpha="0.3"/>
    <TextView
        android:id="@+id/text_sukses_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_sukses_register"
        style="@style/judul_layout"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:id="@+id/image_success_register"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/img_success_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sukses_register"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/btn_explore"
        android:layout_marginTop="18sp"
        style="@style/btn_primary_maroon"
        android:text="@string/action_explore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>