<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".activity.UpdatePasswordAct">

    <TextView
    android:id="@+id/tv_old_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/old_password"
    style="@style/body"
    android:textStyle="bold"
    android:textColor="@color/color_one"
    android:layout_marginBottom="10dp" />
    <EditText
        android:id="@+id/edt_old_password"
        android:background="@drawable/bg_edt_input_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="@string/hint_password" />
    <View
        android:id="@+id/view_border_satu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_primary_maroon" />

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        style="@style/body"
        android:textStyle="bold"
        android:textColor="@color/color_one"
        android:layout_marginTop="10dp" />
    <EditText
        android:id="@+id/edt_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edt_input_edit"
        android:hint="@string/hint_password" />
    <View
        android:id="@+id/view_border_dua"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_primary_maroon" />

    <TextView
        android:id="@+id/tv_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_confirmation"
        style="@style/body"
        android:textStyle="bold"
        android:textColor="@color/color_one"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edt_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="@string/hint_password"
        android:background="@drawable/bg_edt_input_edit"/>

    <View
        android:id="@+id/view_border_tiga"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_primary_maroon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/btn_primary.maroon"
        android:text="@string/btn_save"
        />

</LinearLayout>