<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour"
    tools:context=".activity.RegisterTwoAct">


    <ImageView
        android:id="@+id/logo_koperasi"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:src="@drawable/img_cooperative_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="27dp"
        />
    <LinearLayout
        android:id="@+id/judul_koperasi2"
        app:layout_constraintStart_toEndOf="@id/logo_koperasi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/judul_koperasi"
            android:text="@string/title_cooperative"
            style="@style/subheader"
            />

        <TextView
            android:id="@+id/nama_koperasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_cooperative_name"
            android:textSize="20sp"
            android:fontFamily="@font/montmedium"
            android:textColor="@color/color_one"
            />

        <TextView
            android:id="@+id/alamat_koperasi"
            android:text="@string/title_cooperative_address"
            style="@style/subheader"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/judul_layout"
        android:text="@string/register"
        style="@style/header.color_three"
        app:layout_constraintTop_toBottomOf="@+id/judul_koperasi2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/background_masjid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_mosque"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-20dp"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/muslimhandshake"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_muamalah"
        app:layout_constraintTop_toTopOf="@id/background_masjid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="170dp"
        android:alpha="0.6"/>

    <LinearLayout
        android:background="@drawable/bg_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintTop_toBottomOf="@id/judul_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:padding="24dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="105dp">
            <com.github.florent37.shapeofview.shapes.CircleView
                android:id="@+id/frame_photo"
                android:layout_width="105dp"
                android:layout_height="105dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/iv_register_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_nopic"
                    android:scaleType="centerCrop"/>
            </com.github.florent37.shapeofview.shapes.CircleView>

            <Button
                android:id="@+id/btn_add_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_plus_cream"
                app:layout_constraintBottom_toBottomOf="@id/frame_photo"
                app:layout_constraintEnd_toEndOf="@id/frame_photo"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/color_two"
                android:textSize="21sp"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="@string/email"
            style="@style/body"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edt_email"
            style="@style/input.text"
            android:inputType="textEmailAddress"
            android:layout_marginTop="4dp"/>

        <TextView
            android:text="@string/address"
            style="@style/body"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edt_address"
            style="@style/input.text"
            android:inputType="text"
            android:layout_marginTop="4dp"/>

        <TextView
            android:text="@string/birth_date"
            style="@style/body"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edt_dateofbirth"
            style="@style/input.text"
            android:inputType="date"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btn_register2_lanjut"
            android:layout_marginTop="18sp"
            style="@style/btn_primary.gold"
            android:text="@string/next"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>